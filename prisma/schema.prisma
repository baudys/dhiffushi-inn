generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model Reservation {
    id                  String          @id @default(auto()) @map("_id") @db.ObjectId
    createdAt           DateTime        @default(now())

    name                String
    email               String
    phone               String
    startDate           DateTime
    endDate             DateTime
    totalPrice          Int
    guests              Int
}